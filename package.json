{
  "name": "root",
  "version": "1.0.0",
  "description": "A set of libraries used in demo projects.",
  "private": true,
  "scripts": {
    "build": "lerna run build --stream",
    "clean": "lerna run clean",
    "format": "lerna run format --stream",
    "format:check": "lerna run format:check --stream",
    "lint": "lerna run lint --stream",
    "publish:manual": "yarn run test && lerna run build && lerna publish",
    "publish:ci": "yarn run test && lerna run build && lerna publish patch --conventional-commits --yes",
    "test": "lerna run test --stream",
    "test:cov": "lerna run test:cov --stream",
    "purge": "lerna exec -- rm -rf ./coverage ./dist ./node_modules junit.xml"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.14",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-filenames": "^1.3.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "lerna": "^3.22.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "3.9.7"
  }
}
