{
  "name": "@geersch/calculator",
  "version": "1.1.0",
  "description": "A simple calculator class used for demo purposes.",
  "main": "dist/index",
  "types": "dist/index",
  "author": "Christophe Geers",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:geersch/lerna.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "rm -rf ./node_modules ./coverage ./dist junit.xml",
    "compile": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"**/*.ts\"",
    "format:check": "prettier --check \"**/*.ts\"",
    "lint": "eslint '**/**.ts' --fix",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@geersch/logging": "^1.1.0",
    "eslint": "^7.10.0",
    "jest": "^26.4.2",
    "prettier": "^2.1.2"
  },
  "peerDependencies": {
    "@geersch/logging": "^1.0.0"
  }
}
