{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts"]
}
